@model Category

@{
    ViewBag.Title = "Edit Category";
}

<div class="d-flex justify-content-between align-items-center border-bottom mb-3">
    <h2>Update Category</h2>
</div>

<form asp-area="admin" asp-controller="category" asp-action="Edit" method="post">
    <input asp-for="Id" hidden/>
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DisplayOrder"></label>
        <input asp-for="DisplayOrder" class="form-control" />
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>
    <a class="btn btn-secondary" asp-area="admin" asp-controller="category" asp-action="index">Back</a>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    <partial name="_ClientSideValidationPartialView">
}
